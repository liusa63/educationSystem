<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.icss.entity.User" table="user">
		<id name="uId" column="u_id" type="integer">
			<generator class="native"></generator>
		</id>

		<!-- 普通属性 -->
		<property name="uNumber" column="u_number" type="string"></property>
		<property name="uPwd" column="u_pwd" type="string"></property>
		<property name="uRole" column="u_role" type="double"></property>
		<property name="uStatus" column="u_status" type="string"></property>
	
	</class>

</hibernate-mapping>
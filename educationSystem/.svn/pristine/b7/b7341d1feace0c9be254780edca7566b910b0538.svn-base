	// 查询一个班级的成绩
	public List<Grade> selectGrades(int clid, String coName) {
		List<Grade> grades = new ArrayList<Grade>();
		Set<Student> list = selectByClId(clid);
		for (Student s : list) {
			String stNum = s.getStNum();
			Grade grade = selectByConameAndStnum(coName, stNum);
			grades.add(grade);
		}
		return grades;
	}

